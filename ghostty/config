# Ghostty Terminal Configuration
# Optimized for Arch Linux + Hyprland
# Location: ~/.config/ghostty/config

term = kitty
theme = Aura


# === Font Configuration ===
font-family = "Hurmit Nerd Font"
font-size = 16
font-thicken = true

# === Window Settings ===
window-decoration = false
window-padding-x = 10
window-padding-y = 10
window-save-state = always
window-inherit-working-directory = true

# Hyprland-specific: allows proper window rules
window-theme = auto
gtk-titlebar = false

# === Cursor Configuration ===
cursor-style = block
cursor-style-blink = true
cursor-opacity = 1.0

# === Selection & Clipboard ===
copy-on-select = clipboard
clipboard-read = allow
clipboard-write = allow
clipboard-trim-trailing-spaces = true

# === Scrollback ===
scrollback-limit = 10000



# === Background & Transparency ===
background-opacity = 0.80
background-blur-radius = 20

# Hyprland works better with these settings
unfocused-split-opacity = 0.75

# === Mouse Behavior ===
mouse-hide-while-typing = true
mouse-scroll-multiplier = 3

# === Link Handling ===
link-url = true

# ===  Color Scheme ===
# Selection
selection-background = #44475a
selection-foreground = #f8f8f2

# Cursor
cursor-color = #ffb86c
cursor-text = #282a36

# ANSI Colors (0-15)
palette = 0=#21222c
palette = 1=#ff5555
palette = 2=#50fa7b
palette = 3=#f1fa8c
palette = 4=#bd93f9
palette = 5=#ff79c6
palette = 6=#8be9fd
palette = 7=#f8f8f2
palette = 8=#6272a4
palette = 9=#ff6e6e
palette = 10=#69ff94
palette = 11=#ffffa5
palette = 12=#d6acff
palette = 13=#ff92df
palette = 14=#a4ffff
palette = 15=#ffffff

# === Keybindings ===
# Clipboard operations
keybind = ctrl+c=copy_to_clipboard
keybind = ctrl+v=paste_from_clipboard

# Font size
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+0=reset_font_size

# Window/Tab management
keybind = ctrl+shift+enter=new_window
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+w=close_surface

# Tab navigation
keybind = ctrl+1=goto_tab:1
keybind = ctrl+2=goto_tab:2
keybind = ctrl+3=goto_tab:3
keybind = ctrl+4=goto_tab:4
keybind = ctrl+5=goto_tab:5
keybind = ctrl+6=goto_tab:6
keybind = ctrl+7=goto_tab:7
keybind = ctrl+8=goto_tab:8
keybind = ctrl+9=goto_tab:9

# Split management
keybind = ctrl+shift+minus=new_split:down
keybind = ctrl+shift+backslash=new_split:right
keybind = ctrl+shift+left=goto_split:left
keybind = ctrl+shift+right=goto_split:right
keybind = ctrl+shift+up=goto_split:top
keybind = ctrl+shift+down=goto_split:bottom

# Scrollback
keybind = ctrl+shift+k=clear_screen
keybind = ctrl+shift+u=scroll_page_up
keybind = ctrl+shift+d=scroll_page_down
keybind = ctrl+shift+home=scroll_to_top
keybind = ctrl+shift+end=scroll_to_bottom

# Config reload

# Search
keybind = ctrl+shift+f=toggle_quick_terminal
# === Advanced Settings ===
working-directory = inherit
confirm-close-surface = false
quit-after-last-window-closed = true

# Wayland-specific optimizations
auto-update = download

# === Performance ===
# Ghostty is already optimized, these enhance it further
resize-overlay = never

# === Title ===
title = "Ghostty"


